#:kivy 1.9.1
# File name: kivy_lang.py


<MyButton>:
    size_hint: 0.15, 0.1
    text_size_hint: 0.15

<MainScreen>:
    id: 'screen'

    MyTextInput:
        pos_hint: {'center_x': 0.5, 'top': 1}
        size_hint: 1, 0.05
        text: self.ip
        padding_x: [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0, 0] if self.text else [self.center[0], 0]
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

    MyColorWheel:
        id: myclw
        size_hint: 1, 0.85*9/16
        pos_hint: {'center_x': 0.5, 'top': 0.93}

    MyHexagon:
        size_hint: 0.2*16/9, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                cap: 'none'
                close: True
                width: 2
                points: self.give_points(root.width*0.5, root.height*0.25, root.height*0.2, root.width*0.2)

    MySlider:
        size_hint: 0.9, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.47}
        min: 0
        max: 255
        value: 255
        value_track: True
        value_track_color: 1, 1, 0, 1

    MyButton:
        text: "On"
        color: 0, 1, 0, 1
        pos_hint: {'left': 1, 'bottom': 0}
        on_press: self.on()

    MyButton:
        text: "Off"
        color: 1, 0, 0, 1
        pos_hint: {'right': 1, 'bottom': 0}
        on_press: self.off()


    MySpinner:
        size_hint: 0.15, 0.1
        pos_hint: {'center_x': 0.5, 'bottom': 0}
        text: "Mode"
        values: ["1", "2", "3"]
        id: spinner_id